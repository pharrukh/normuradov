---
layout: layouts/base.njk
templateClass: tmpl-post
---

<h1>{{ title }}</h1>
<time datetime="{{ page.date | htmlDateString }}">{{ page.date | readableDate }}</time>
{%- for tag in tags | filterTagList %}
  {%- set tagUrl %}/tags/{{ tag | slugify }}/{% endset %}
  <a href="{{ tagUrl | url }}" class="post-tag">{{ tag }}</a>
{%- endfor %}
{{ content | safe }}
<div id="share-buttons" class="likely" data-url="{{ page.url | toAbsoluteUrl }}" data-title="{{ title }}">
  <div class="facebook">Share</div>
  <div class="twitter">Tweet</div>
  <div class="telegram">Send</div>
  <div class="linkedin">Share</div>
  <div class="whatsapp">Send</div>
  <div class="reddit">Share</div>
</div>
{%- if collections.posts %}
  {%- set nextPost = collections.posts | getNextCollectionItem(page) %}
  {%- set previousPost = collections.posts | getPreviousCollectionItem(page) %}
  {%- if nextPost or previousPost %}
    <hr>
      <ul>
        {%- if nextPost %}
          <li>Next:
            <a href="{{ nextPost.url | url }}">{{ nextPost.data.title }}</a>
          </li>
        {% endif %}
        {%- if previousPost %}
          <li>Previous:
            <a href="{{ previousPost.url | url }}">{{ previousPost.data.title }}</a>
          </li>
        {% endif %}
      </ul>
    {%- endif %}
  {%- endif %}